@model IEnumerable<DoctorAppointmentBookingSystem.Dto.DoctorDto>
@{
    ViewData["Title"] = "Doctors";
}

<h2>Doctors</h2>

<table class="table">
    <thead>
        <tr>
            <th>UserName</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Gender</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.UserName</td>
                <td>@doctor.FullName</td>
                <td>@doctor.Email</td>
                <td>@doctor.PhoneNumber</td>
                <td>@doctor.Gender</td>
                <td>@doctor.DepartmentName</td>
                <td>
                    <a asp-action="DoctorDetail" asp-route-id="@doctor.Id" class="btn btn-info">Details</a>
                    <a asp-action="EditDoctor" asp-route-id="@doctor.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteDoctor" asp-route-id="@doctor.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this doctor?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateDoctor" class="btn btn-primary">Create New Doctor</a>
